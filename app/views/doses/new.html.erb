<h1>Add dose to <%= @cocktail.name %></h1>

<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :ingredient_id, collection: @ingredients%>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

